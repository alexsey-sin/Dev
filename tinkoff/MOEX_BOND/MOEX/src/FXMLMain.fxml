<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.CheckComboBox?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scom2.FXMLMainController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <MenuBar minWidth="-Infinity" prefHeight="24.0" prefWidth="800.0">
              <menus>
                <Menu mnemonicParsing="false" text="Данные">
                  <items>
                        <MenuItem fx:id="idMenuItemLoadOfFile" mnemonicParsing="false" onAction="#OnActionMenuItemLoadOfFile" text="Загрузить из файла" />
                        <MenuItem fx:id="idMenuItemSaveOnFile" mnemonicParsing="false" onAction="#OnActionMenuItemSaveOnFile" text="Сохранить в файл" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="idMenuItemLoadOnMOEX" mnemonicParsing="false" onAction="#OnActionMenuItemLoadOnMOEX" text="Загрузить данные с ММВБ" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" onAction="#OnActionExitApp" text="Выход" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox prefHeight="45.0" prefWidth="800.0" spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label text="Номинал от:" />
                        <CheckBox fx:id="checkStartFaceValue" mnemonicParsing="false" onAction="#OnCheckStartFaceValue">
                           <graphic>
                              <TextField fx:id="startFaceValue" alignment="CENTER" disable="true" prefHeight="22.0" prefWidth="80.0" text="0" />
                           </graphic>
                        </CheckBox>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Номинал до:" />
                        <CheckBox fx:id="checkStopFaceValue" mnemonicParsing="false" onAction="#OnCheckStopFaceValue">
                           <graphic>
                              <TextField fx:id="stopFaceValue" alignment="CENTER" disable="true" prefHeight="22.0" prefWidth="80.0" text="5000" />
                           </graphic>
                        </CheckBox>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Дата погашения от:" />
                        <CheckBox fx:id="checkStartMatDate" mnemonicParsing="false" onAction="#OnCheckStartMatDate">
                           <graphic>
                              <DatePicker fx:id="matDateStart" disable="true" prefHeight="22.0" prefWidth="100.0" />
                           </graphic>
                        </CheckBox>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Дата погашения до:" />
                        <CheckBox fx:id="checkStopMatDate" mnemonicParsing="false" onAction="#OnCheckStopMatDate">
                           <graphic>
                              <DatePicker fx:id="matDateStop" disable="true" prefHeight="22.0" prefWidth="100.0" />
                           </graphic>
                        </CheckBox>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="По типу облигации:" />
                        <CheckBox fx:id="checkType" mnemonicParsing="false" onAction="#OnCheckType">
                           <graphic>
                              <CheckComboBox fx:id="comboBoxType" disable="true" prefWidth="150.0" showCheckedCount="true" />
                           </graphic>
                        </CheckBox>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label />
                        <Button fx:id="bntUpdate" mnemonicParsing="false" onAction="#handlerOnActionBntUpdate" text="Обновить" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
            <TableView fx:id="tableBond" editable="true" prefHeight="441.0" prefWidth="800.0">
              <columns>
                <TableColumn fx:id="colSecid" maxWidth="120.0" minWidth="80.0" prefWidth="90.0" text="Код" />
                <TableColumn fx:id="colName" maxWidth="200.0" minWidth="100.0" prefWidth="180.0" text="Название" />
                  <TableColumn fx:id="colMatDate" prefWidth="75.0" style="aligment: center;" text="Погашение" />
                  <TableColumn fx:id="colFaceValue" prefWidth="60.0" text="Номинал" />
                  <TableColumn fx:id="colCouponFrequency" prefWidth="75.0" text="купонов в год" />
                  <TableColumn fx:id="colCouponValue" prefWidth="75.0" text="Купон" />
                  <TableColumn fx:id="colType" prefWidth="120.0" text="Тип облигации" />
                  <TableColumn fx:id="colProfit" prefWidth="100.0" sortType="DESCENDING" text="Доходность,%" />
              </columns>
            </TableView>
            <TextArea fx:id="textarea" prefHeight="67.0" prefWidth="922.0" />
            <ToolBar prefHeight="40.0" prefWidth="800.0">
              <items>
                <Button fx:id="bnt1" mnemonicParsing="false" onAction="#handlerOnActionBnt1" text="Button1" />
                <Button fx:id="bnt2" mnemonicParsing="false" onAction="#handlerOnActionBnt2" text="Button2" />
                  <Button fx:id="bnt3" mnemonicParsing="false" onAction="#handlerOnActionBnt3" text="Button3" />
                  <Label fx:id="lblStatus" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
